<?xml version="1.0" encoding="utf-8"?>
<resources>    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Base.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="cornerRadius">40dp</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/newyork</item>
        <item name="backgroundTint">@color/asfalt_App_Bar</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>